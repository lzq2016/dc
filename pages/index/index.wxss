swiper {
  height: 300rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.flow {
  padding: 30rpx 0;
  background-color: #fff;
}

.flow image {
  width: 100%;
  height: 133rpx;
}

page {
  background-color: #efeff4;
}

.h2 {
  margin-top: 39rpx;
  text-align: center;
}

.h2 image {
  width: 146rpx;
  height: 10rpx;
  position: relative;
  top: -4rpx;
}

.h2 text {
  color: #959595;
  margin: 0 40rpx;
  font-family: "Microsoft YaHei";
}

.title {
  text-align: center;
  margin-top: 10rpx;
  margin-left: 29rpx;
  color: #666;
  font-size: 32rpx;
  line-height:120rpx;
border-bottom:1rpx solid #e4e4e4;

}

.c-minheight {
  min-height: 80px;
}

.listWrap {
  padding-top: 15px;
  margin-top: 23px;
}

.list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: flex-start;
  align-items: center;
  padding: 0;
  margin-bottom: 50rpx;
}

.nvWrap {
  width: 375rpx;
  min-height: 375rpx;
  text-align: center;
  padding: 10px 37.5rpx 5px;
  color: rgb(33, 33, 33);
  text-decoration: none;
  border-bottom-color: rgb(237, 237, 237);
  border-right: 1px solid rgb(237, 237, 237);
  border-bottom-width: 1px;
  border-bottom-style: solid;
}

.img1 {
  width: 300rpx;
  height: 300rpx;
  box-shadow: 0px 0px 38px -5px rgba(0, 0, 0, 1);
  background-color: transparent;
  -ms-box-shadow: 0px 0px 38px -5px rgba(0, 0, 0, 1);
  -o-box-shadow: 0px 0px 38px -5px rgba(0, 0, 0, 1);
  -moz-box-shadow: 0px 0px 38px -5px rgba(0, 0, 0, 1);
  -webkit-box-shadow: 0px 0px 38px -5px rgba(0, 0, 0, 1);
}

.text1 {
  float: right;
  font-size: 12px;
  color: rgb(153, 153, 153);
  line-height: 1.5em;
}

.text2 {
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  float: left;
}

.c-block {
  display: block;
}

.wrap1 {
  color: rgb(0, 132, 207);
  font-size: 38rpx;
  text-align: left;
  line-height: 38rpx;
  overflow:hidden;
  padding-bottom:5px;
  padding-left: 5px;
  padding-right: 5px;
}
.price_text{
    color: #ff5408;
    font-size:38rpx;
    float: left;
    line-height: 35px;
}
image {
width:320px;
height:240px;
display:inline-block;
overflow:hidden;
}
.layer{
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 10;
  display: none;
}
.foodDetail{
  width: 70%;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 100;
  background-color: #fff;
  border-radius: 5rpx;
  display: none;
}
.foodSwiperWrap{
}
.foodImg{
  border-top-left-radius: 5rpx;
border-top-right-radius: 5rpx;
}
.titleWrap{
  margin-top: 10px;
  margin-left: 15px;
  margin-right: 15px;
  overflow: hidden;
}
.foodTitle{
  font-size: 14px;
  float: left;
}
.sales{
  font-size: 12px;
  float: right;
  color: #999;
}
.mark{
  font-size: 13px;
  display: inline-block;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  padding:2px 4px;
  margin-right: 6px;
}
.markWrap{
  margin-left: 15px;
  margin-top: 7px;
}
.markSelected{
  border: 1rpx solid #ff5408;
}
.moneyWrap{
  margin-left: 15px;
  margin-right: 15px;
  margin-bottom: 10px;
  margin-top: 5px;
  overflow: hidden;
}
.price_detail{
    color: #ff5408;
